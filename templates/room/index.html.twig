{% extends 'base.html.twig' %}

{% block title %}Study Rooms{% endblock %}

{% block body %}
    <h1 class="mb-4">Study Rooms</h1>
    <div class="row">
        {% for room in rooms %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ room.name }}</h5>
                        <p class="card-text">Capacity: {{ room.capacity }} people</p>
                        <ul class="list-group list-group-flush mb-3">
                            {% if room.hasWifi %}
                                <li class="list-group-item">Wi-Fi Available</li>
                            {% endif %}
                            {% if room.hasProjector %}
                                <li class="list-group-item">Projector Available</li>
                            {% endif %}
                            {% if room.hasWhiteboard %}
                                <li class="list-group-item">Whiteboard Available</li>
                            {% endif %}
                            {% if room.hasPowerOutlets %}
                                <li class="list-group-item">Power Outlets Available</li>
                            {% endif %}
                            {% if room.hasTV %}
                                <li class="list-group-item">TV Available</li>
                            {% endif %}
                            {% if room.hasAirConditioning %}
                                <li class="list-group-item">Air Conditioning Available</li>
                            {% endif %}
                        </ul>
                        <a href="{{ path('room_show', {'id': room.id}) }}" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}